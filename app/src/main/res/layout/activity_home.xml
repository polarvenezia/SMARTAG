<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home"
    android:onClick="onlistButtonClick"
    android:nestedScrollingEnabled="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List"
        android:id="@+id/Blist"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag"
        android:id="@+id/Btag"
        android:layout_above="@+id/Blist"
        android:layout_alignLeft="@+id/Blist"
        android:layout_alignStart="@+id/Blist"
        android:layout_marginBottom="69dp"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/Bfind"
        android:layout_below="@+id/Blist"
        android:layout_alignLeft="@+id/Blist"
        android:layout_alignStart="@+id/Blist"
        android:layout_marginTop="74dp"
        android:onClick="onButtonClick"
        android:nestedScrollingEnabled="false" />
</RelativeLayout>
